<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>HTMLServlet</servlet-name>
        <servlet-class>HTMLServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayHeader</servlet-name>
        <servlet-class>DisplayHeader</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerServlet</servlet-name>
        <servlet-class>registerServlet</servlet-class>
    </servlet>

   <servlet>
        <servlet-name>UploadFileServlet</servlet-name>
        <servlet-class>UploadFileServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>getUploadFileServlet</servlet-name>
        <servlet-class>getUploadFileServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>showFileServlet</servlet-name>
        <servlet-class>showFileServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>downloadFileServlet</servlet-name>
        <servlet-class>downloadFileServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>uploadBookMarksServlet</servlet-name>
        <servlet-class>uploadBookMarksServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SetFileStateServlet</servlet-name>
        <servlet-class>SetFileStateServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>getBookMarksServlet</servlet-name>
        <servlet-class>getBookMarksServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>deleteFileServlet</servlet-name>
        <servlet-class>deleteFileServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>deleteBookMarksServlet</servlet-name>
        <servlet-class>deleteBookMarksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>postServlet</servlet-name>
        <servlet-class>postServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getUploadFileServlet</servlet-name>
        <url-pattern>/getUploadFile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
            <servlet-name>HTMLServlet</servlet-name>
            <url-pattern>/html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
            <servlet-name>DisplayHeader</servlet-name>
            <url-pattern>/DisplayHeader</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
   <servlet-mapping>
        <servlet-name>UploadFileServlet</servlet-name>
        <url-pattern>/UploadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showFileServlet</servlet-name>
        <url-pattern>/ShowFile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>downloadFileServlet</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>uploadBookMarksServlet</servlet-name>
        <url-pattern>/uploadBookMarks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SetFileStateServlet</servlet-name>
        <url-pattern>/SetFileState</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getBookMarksServlet</servlet-name>
        <url-pattern>/getBookMarks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteFileServlet</servlet-name>
        <url-pattern>/deleteFile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteBookMarksServlet</servlet-name>
        <url-pattern>/deleteBookMarks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>postServlet</servlet-name>
        <url-pattern>/post</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>